{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",       // Points to project root
    "outDir": "./dist",    // Output directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts"], // Includes all TS files
  "exclude": ["node_modules"]
}